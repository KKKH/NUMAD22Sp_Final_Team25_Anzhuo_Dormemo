<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/message_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:padding="5dp"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/post_message_userimage"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/message_profile_icon"
                android:layout_marginLeft="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp"
                    android:padding="3dp">

                    <TextView
                        android:id="@+id/post_message_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_gravity="center_vertical"
                        android:text="Username"
                        android:textColor="#000000"
                        android:textSize="13sp"
                        android:textStyle="bold"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/message_priority_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:textAlignment="viewEnd"
                        android:layout_marginLeft="4dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="posted on "
                        android:textColor="#FF4C4B4B"
                        android:id="@+id/text_que_time_dis"
                        android:textSize="11sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" DATE"
                        android:textColor="#FF4C4B4B"
                        android:id="@+id/post_date"
                        android:textSize="11sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" TIME"
                        android:textAlignment="viewEnd"
                        android:textColor="#FF4C4B4B"
                        android:id="@+id/post_time"
                        android:textSize="11sp"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/settings_current_password"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#50FFFFFF" />


        <TextView
            android:id="@+id/user_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Question????"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#000000"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <ImageButton
                android:id="@+id/like_button"
                android:layout_marginTop="10dp"
                android:layout_width="28dp"
                android:layout_height="26dp"
                android:background="#00FF5222"
                android:src="@drawable/message_dislike_icon"/>
            <TextView
                android:id="@+id/number_of_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="0 Likes"
                android:layout_gravity="center_vertical"
                android:textSize="11dp"
                />

            <ImageButton
                android:id="@+id/comment_button"
                android:layout_marginTop="10dp"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="#00FF5222"
                android:src="@drawable/message_comment_icon"
                android:layout_marginLeft="124dp"
                android:baselineAlignBottom="false"/>

            <TextView
                android:id="@+id/message_comment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:text="Comments"
                android:textSize="11dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>